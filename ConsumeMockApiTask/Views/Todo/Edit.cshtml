@model Todo

@{
    ViewData["Title"] = "Update Todo";
}


<form asp-controller="Todo" asp-action="Edit" method="POST">
    <input asp-for="Id" type="text" class="form-control mt-2" hidden readonly>
    <input asp-for="UserId" type="text" class="form-control mt-2" hidden readonly>
    <div class="form-group mt-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control mt-2">
    </div>
    <div class="form-check mt-2">
        <input type="checkbox" class="form-check-input" asp-for="Completed">
        <label class="form-check-label" asp-for="Completed">Completed</label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
@model List<Todo>

@{
    ViewData["Title"] = "All Todo Items";
}

<div>
    <div class="d-flex align-items-center">
        <h1 class="display-4 mb-3">Todos</h1>
        <a asp-controller="Todo" asp-action="Create" class="btn btn-primary ms-3" type="button">Create New Todo</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>User ID</th>
                <th>Title</th>
                <th>Completed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todo in Model)
            {
                <tr>
                    <th>@todo.Id</th>
                    <td>@todo.UserId</td>
                    <td>@todo.Title</td>
                    <td>@todo.Completed</td>
                    <td>
                        <a asp-controller="Todo" asp-action="Edit" asp-route-todoId="@todo.Id" class="btn btn-outline-warning" type="button">Edit</a>
                        <a asp-controller="Todo" asp-action="Delete" asp-route-todoId="@todo.Id" class="btn btn-outline-danger" type="button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>